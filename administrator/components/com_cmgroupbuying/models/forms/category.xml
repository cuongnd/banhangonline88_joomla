<?xml version="1.0" encoding="utf-8"?>

<form>

	<fieldset addfieldpath="/administrator/components/com_cmgroupbuying/models/fields">

		<field name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			size="10"
			default="0"
			readonly="true"
			class="readonly"
		/>

		<field name="name"
			type="text"
			label="COM_CMGROUPBUYING_CATEGORY_FIELD_NAME_LABEL"
			description="COM_CMGROUPBUYING_CATEGORY_FIELD_NAME_DESC"
			class="inputbox"
			size="30"
			required="true"
		 />

		<field name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="inputbox"
			size="30"
		/>

		<field name="description"
			type="textarea"
			label="COM_CMGROUPBUYING_CATEGORY_FIELD_DESCRIPTION_LABEL"
			description="COM_CMGROUPBUYING_CATEGORY_FIELD_DESCRIPTION_DESC"
			class="inputbox"
			rows="3"
			cols="30"
		/>

		<fieldset name="map_icon">
			<field name="map_icon" type="media" directory=""
				hide_none="1" label="COM_CMGROUPBUYING_CATEGORY_FIELD_MAP_ICON_LABEL"
				size="30"
				description="COM_CMGROUPBUYING_CATEGORY_FIELD_MAP_ICON_DESC" />
		</fieldset>

		<fieldset name="map_icon_shadow">
			<field name="map_icon_shadow" type="media" directory=""
				hide_none="1" label="COM_CMGROUPBUYING_CATEGORY_FIELD_MAP_ICON_SHADOW_LABEL"
				size="30"
				description="COM_CMGROUPBUYING_CATEGORY_FIELD_MAP_ICON_SHADOW_DESC" />
		</fieldset>

		<field id="published"
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
		</field>

		<field name="ordering"
			type="cmordering"
			class="inputbox"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
		/>

	</fieldset>

</form>