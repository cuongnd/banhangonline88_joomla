<?xml version="1.0" encoding="utf-8"?>

<form>

	<fieldset addfieldpath="/administrator/components/com_cmgroupbuying/models/fields">

		<field name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			size="10"
			default="0"
			readonly="true"
			class="readonly"
		/>

		<field name="name"
			type="text"
			label="COM_CMGROUPBUYING_PAYMENT_FIELD_NAME_LABEL"
			description="COM_CMGROUPBUYING_PAYMENT_FIELD_NAME_DESC"
			class="inputbox"
			size="30"
			required="true"
		/>

		<field name="folder"
			type="folderlist"
			default=""
			label="COM_CMGROUPBUYING_PAYMENT_FIELD_FOLDER_LABEL"
			description="COM_CMGROUPBUYING_PAYMENT_FIELD_FOLDER_DESC"
			directory="components/com_cmgroupbuying/payments"
			filter=""
			exclude=""
			stripext=""
			hide_none="true"
			hide_default="true"
		/>

		<field name="lock_time"
			type="text"
			label="COM_CMGROUPBUYING_PAYMENT_FIELD_LOCK_TIME_LABEL"
			description="COM_CMGROUPBUYING_PAYMENT_FIELD_LOCK_TIME_DESC"
			class="inputbox"
			size="30"
			required="true"
		/>

		<field id="published"
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
		</field>

		<field name="ordering"
			type="cmordering"
			class="inputbox"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
		/>

	</fieldset>

</form>