<?xml version="1.0" encoding="utf-8"?><form>	<fieldset>		<field				name="product_id"				type="text"				class="readonly"				label="JGLOBAL_FIELD_ID_LABEL"				description="JGLOBAL_FIELD_ID_DESC"				default="0"				filter="int"				readonly="true"/>		<field				name="product_name"				type="text"				label="product name"				description="product name"				size="40"/>		<field				name="product_code"				type="code"				label="product code"				component="com_hikashop"				input_name="jform[product_name]"				ctrl="product"				task="get_code"				description="product code"				size="40"/>		<field				name="product_alias"				type="alias"				input_name="jform[product_name]"				label="JFIELD_ALIAS_LABEL"				description="JFIELD_ALIAS_DESC"				hint="JFIELD_ALIAS_PLACEHOLDER"				size="40"/>		<field				name="icon"				type="media"				label="icon"				description="icon"				/>	</fieldset>	<fields name="params">	</fields></form>