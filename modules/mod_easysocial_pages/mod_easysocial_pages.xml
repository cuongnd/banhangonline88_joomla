<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="module" client="site" method="upgrade">
	<name>EasySocial Pages</name>
	<author>Stack Ideas Sdn Bhd</author>
	<creationDate>16th February 2017</creationDate>
	<copyright>Copyright (C) 2009 - 2016 Stack Ideas Sdn Bhd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@stackideas.com</authorEmail>
	<authorUrl>http://stackideas.com</authorUrl>
	<version>2.0.87</version>
	<description><![CDATA[MOD_EASYSOCIAL_PAGES_DESC]]></description>
	<files>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename module="mod_easysocial_pages">mod_easysocial_pages.php</filename>
		<filename>mod_easysocial_pages.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_easysocial_pages.ini</language>
		<language tag="en-GB">en-GB.mod_easysocial_pages.sys.ini</language>
	</languages>

	<config>
		<fields name="params" addfieldpath="/administrator/components/com_easysocial/models/fields">
			<fieldset name="basic">
				<field name="filter" type="list" class="input-xxlarge" default="0" label="MOD_EASYSOCIAL_PAGES_FILTER_TYPE" description="MOD_EASYSOCIAL_PAGES_FILTER_TYPE_DESC">
					<option value="0">MOD_EASYSOCIAL_PAGES_NO_FILTERING</option>
					<option value="1">MOD_EASYSOCIAL_PAGES_FILTER_CATEGORY</option>
					<option value="2">MOD_EASYSOCIAL_PAGES_FILTER_FEATURED</option>
					<option value="3">MOD_EASYSOCIAL_PAGES_FILTER_LOGGED_IN_USER</option>
				</field>
				<field 
					name="category" 
					type="sql" 
					multiple="true" 
					query="SELECT id AS value, title AS category FROM #__social_clusters_categories WHERE type = 'page' AND state = 1" 
					label="MOD_EASYSOCIAL_PAGES_CATEGORY_FILTER" 
					description="MOD_EASYSOCIAL_PAGES_CATEGORY_FILTER_DESC" 
				/>
				<field name="ordering" type="list" default="latest" label="MOD_EASYSOCIAL_PAGES_ORDERING" description="MOD_EASYSOCIAL_PAGES_ORDERING_DESC">
					<option value="latest">MOD_EASYSOCIAL_PAGES_ORDERING_LATEST</option>
					<option value="popular">MOD_EASYSOCIAL_PAGES_ORDERING_POPULAR</option>
					<option value="members">MOD_EASYSOCIAL_PAGES_ORDERING_MOST_FOLLOWERS</option>
					<option value="random">MOD_EASYSOCIAL_PAGES_ORDERING_RANDOM</option>
				</field>
				<field name="display_like_counter" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_PAGES_DISPLAY_MEMBER_COUNTER" description="MOD_EASYSOCIAL_PAGES_DISPLAY_MEMBER_COUNTER_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="display_avatar" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_PAGES_DISPLAY_PAGE_AVATAR" description="MOD_EASYSOCIAL_PAGES_DISPLAY_PAGE_AVATAR_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>				
				<field name="display_category" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_PAGES_DISPLAY_CATEGORY" description="MOD_EASYSOCIAL_PAGES_DISPLAY_CATEGORY_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="display_actions" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_PAGES_DISPLAY_ACTIONS" description="MOD_EASYSOCIAL_PAGES_DISPLAY_ACTIONS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="display_limit" type="text" default="5" class="input-mini text-center" label="MOD_EASYSOCIAL_PAGES_DISPLAY_LIMIT" description="MOD_EASYSOCIAL_PAGES_DISPLAY_LIMIT_DESC" />
				<field 
					name="page_inclusion" 
					type="sql" 
					multiple="true" 
					query="SELECT id AS value, title AS page_inclusion FROM #__social_clusters WHERE cluster_type = 'page' AND state = 1" 
					label="MOD_EASYSOCIAL_PAGES_INCLUSION" 
					description="MOD_EASYSOCIAL_PAGES_INCLUSION_DESC" 
				/>
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
