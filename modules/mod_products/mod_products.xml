<extension type="module" method="upgrade" client="site">
    <name>MOD_PRODUCTS</name>
    <creationDate>Sep 2016</creationDate>
    <author>nguyendinhcuong</author>
    <authorEmail>nguyendinhcuong@gmail.com</authorEmail>
    <authorUrl>http://banhangonline88.com</authorUrl>
    <copyright>Copyright © 2016 - All rights reserved.</copyright>
    <license>GNU General Public License v2.0</license>
    <version>0.0.1</version>
    <description>MOD_PRODUCTS_DESCRIPTION</description>
    <files>
        <filename module="mod_products">mod_products.php</filename>
        <filename>mod_products.xml</filename>
        <filename>index.html</filename>
        <folder>language</folder>
        <folder>tmpl</folder>
        <folder>assets</folder>
    </files>
    <config>
        <fields name="params" addfieldpath="/modules/mod_products/elements">
            <fieldset
                    name="basic">
                <field
                        name="categories"
                        type="productcategory"
                        label="categories"
                        multiple="true"
                        filter="product"
                        description="categories"/>
                <field
                        name="manufacturer"
                        type="productcategory"
                        label="manufacturer"
                        multiple="true"
                        filter="manufacturer"
                        description="manufacturer"/>
                <field
                        name="vendor"
                        type="productcategory"
                        label="vendor"
                        multiple="true"
                        filter="vendor"
                        description="vendor"/>

                <field
                        name="order_by"
                        type="list"
                        default="best_sale"
                        label="style"
                        description="style">
                    <option
                            value="best_sale">Best sale
                    </option>
                    <option
                            value="last_product">last product
                    </option>
                    <option
                            value="new_update">new update
                    </option>

                    <option
                            value="random">random
                    </option>
                    <option
                            value="hot">hot product
                    </option>
                    <option
                            value="hot">hit
                    </option>
                </field>
                <field
                        name="sort_type"
                        type="list"
                        default="ASC"
                        label="Sort type"
                        description="Sort type">
                    <option
                            value="ASC">ASC</option>
                    <option
                            value="DESC">DESC
                    </option>

                </field>

                <field
                        name="max_product"
                        type="text"
                        label="max_product"
                        description="max_product"/>

                <field
                        name="product_style"
                        type="list"
                        default="table"
                        label="style"
                        description="style">
                    <option
                            value="table">table
                    </option>
                    <option
                            value="slider">slider
                    </option>
                </field>



                <field name="total_table_row"
                       type="integer"
                       default="2"
                       first="0"
                       last="10"
                       step="1"
                       label="total table row"
                       description="total table row">

                </field>
                <field name="total_table_column"
                       type="integer"
                       default="4"
                       first="0"
                       last="10"
                       step="1"
                       label="Total table column"
                       description="Total table column">

                </field>
                <field name="total_item_on_slide_screen"
                       type="integer"
                       default="4"
                       first="0"
                       last="10"
                       step="1"
                       label="Total item on slide screen"
                       description="Total item on slide screen">

                </field>


            </fieldset>
            <fieldset
                    name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>

                <field
                        name="moduleclass_sfx"
                        type="textarea" rows="3"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>

                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                            value="1">JGLOBAL_USE_GLOBAL
                    </option>
                    <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING
                    </option>
                </field>

                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
                <field
                        name="cachemode"
                        type="hidden"
                        default="static">
                    <option
                            value="static"></option>
                </field>
            </fieldset>
        </fields>

