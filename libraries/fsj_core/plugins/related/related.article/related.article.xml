  <name>Article</name>
  <description>Link to a Joomla! content article</description>

  <params>
    <pick>
      <type>table</type>
      <reference>article</reference>
      <component></component><!-- if component is blank use fsj_core, otherwise look in component folder -->
      <!-- if reference isnt defined, then should be local -->
    </pick>

    <display>
      <type>table</type>
      <data>
        <table>content</table>
        <field>title</field>
        <id>id</id>
        <use_access>1</use_access>
        <use_state>1</use_state>
      </data>
    </display>
    
    <settings>
      <plugin>
        <image>fsj/plugins/related/related_article.png</image>
      </plugin>
    </settings>
  </params>

