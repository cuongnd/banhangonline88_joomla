<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="system" method="upgrade">
    <name>System - Helpdesk integration with MosetsTree</name>
    <creationDate>June 2011</creationDate>
    <author>iMaQma</author>
    <authorEmail>support@imaqma.com</authorEmail>
    <authorUrl>http://www.imaqma.com</authorUrl>
    <copyright>(C) 2006-2011 Components Lab, Lda. All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <version>1.0.0</version>
    <description>It will add a create ticket link directly from a listing detail page.</description>

    <files>
        <filename plugin="helpdesk_mtree">helpdesk_mtree.php</filename>
        <folder>helpdesk_mtree</folder>
    </files>

    <config>
        <fields name="params" addfieldpath="/administrator/components/com_maqmahelpdesk/elements">
            <fieldset name="basic">
                <field
                        name="id_workgroup"
                        type="workgroupj17"
                        default="0"
                        label="Department"
                        description="Set the department in which the ticket from will be created.">
                </field>
            </fieldset>
        </fields>
    </config>
</extension>