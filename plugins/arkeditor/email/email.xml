<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="plugin" group="arkeditor" method="upgrade">
	<name>ArkEditor - Email</name>
	<author>WebxSolution Ltd</author>
	<creationDate>Jan 2015</creationDate>
	<copyright>>Copyright (C) 2015- 2016 All rights reserved</copyright>
	<license>GNU General Public License version 2</license>
	<authorEmail>info@arkextensions.com</authorEmail>
	<authorUrl>http://www.arkextensions.com</authorUrl>
	<version>1.0.1</version>
	<description>The ArkEditor Email plugin</description>
	<icon>email.png</icon>
	<files>
		<filename plugin="email">email.php</filename>
		<filename>index.html</filename>
		<folder>email</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="dialogtitle_switcher" type="jsradio" default="0" label="PLG_ARKEDITOR_DIALOG_TITLESHWN" description="PLG_ARKEDITOR_DIALOG_TITLESHWN_DESC">
					<option value="0">Default</option>
					<option value="1">Enter new title</option>
				</field>	
				<field name="dialogtitle" type="text" default="Default" label="PLG_ARKEDITOR_DIALOG_TITLEENT" description="PLG_ARKEDITOR_DIALOG_TITLEENT_DESC" />
				<field name="height" type="text" default="230" label="PLG_ARKEDITOR_DIALOG_HEIGHT" description="PLG_ARKEDITOR_DIALOG_HEIGHT_DESC" />
				<field name="width" type="text" default="350" label="PLG_ARKEDITOR_DIALOG_WIDTH" description="PLG_ARKEDITOR_DIALOG_WIDTH_DESC"/>
			</fieldset>
			<fieldset name="advanced">
				<field name="emailProtection" class="btn-group" type="radio" label="PLG_ARKEDITOR_ENABLE_EMAIL_CLOAKING" default="" description="PLG_ARKEDITOR_ENABLE_EMAIL_CLOAKING_DESC">
					<option value="">No</option>
					<option value="encode">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
