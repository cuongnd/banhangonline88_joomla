<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:paddingBottom="@dimen/base_margin_vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground" >

        <!-- Needed custom implementation of resizing for support older devices. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <vantinviet.banhangonline88.views.ResizableImageView
                android:id="@+id/banner_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_facebook_style"
                android:paddingLeft="10px"
                android:text="TextView"
                android:textColor="#fff"
                android:textSize="24sp" />
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>